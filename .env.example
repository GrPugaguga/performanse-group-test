# Этот файл — пример. Скопируйте его в .env и заполните своими данными
# ВНИМАНИЕ: Не храните .env файл в системе контроля версий

# Настройки приложения
NODE_ENV=development
APP_PORT=3000

# URL для подключения к базе данных
# Формат: mysql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL="mysql://root:root@localhost:3306/knowledge_base"

# Секретный ключ для генерации JWT токенов
JWT_SECRET="your-super-secret-and-long-string-for-jwt"
